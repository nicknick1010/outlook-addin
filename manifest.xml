<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="MailApp">
  <Id>YOUR-ADDIN-ID</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Provider Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Send Confirmation Add-in" />
  <Description DefaultValue="An add-in that asks for confirmation before sending an email." />
  <IconUrl DefaultValue="https://your-local-server/icon.png" />
  <SupportUrl DefaultValue="https://your-local-server/support" />
  <AppDomains>
    <AppDomain>https://your-local-server</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemSend">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://your-local-server/Home.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
</OfficeApp>
